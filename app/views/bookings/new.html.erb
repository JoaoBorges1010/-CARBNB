<div class="container mt-5">
  <div class="newsletter-subscribe">
    <div class="container">
      <div class="intro">
        <h2 class="text-center">Book This car</h2>
        <p class="text-center">Check your price Before submiting</p>
      </div>
      <div class="container p-2 mt-5" data-controller="total-price" data-total-price-daily-price-value="<%= @car.price_per_day %>">
        <%= simple_form_for [@car, @booking] do |f|%>
          <div class="form-group"><%= f.input :starts_at, as: :date, html5: true, input_html: { data: { total_price_target: "startsAt", action: "change->total-price#calculateTotalPrice" } }, class: "form-control" %></div>
          <div class="form-group"><%= f.input :ends_at, as: :date, html5: true, input_html: { data: { total_price_target: "endsAt", action: "change->total-price#calculateTotalPrice" } }, class: "form-control" %></div>
          <div class="card w-25 rounded bg-light m-2">
            <h4 class="text-center">Price:</h4>
            <h2 class="text-center" data-total-price-target="finalPrice"></h2><h2>â‚¬</h2>
          </div>
          <div class="form-group"><%= f.submit class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
